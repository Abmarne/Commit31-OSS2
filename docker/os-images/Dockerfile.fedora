# Fedora-based Workspace
FROM fedora:39

# Install basic tools
RUN dnf install -y \
    bash \
    git \
    vim \
    nano \
    curl \
    wget \
    gcc \
    gcc-c++ \
    make \
    python3 \
    python3-pip \
    nodejs \
    npm \
    && dnf clean all

# Create workspace directory
WORKDIR /workspace

# Create a non-root user
RUN useradd -m -s /bin/bash ghostuser && \
    chown -R ghostuser:ghostuser /workspace

USER ghostuser

ENV SHELL=/bin/bash

CMD ["/bin/bash"]
